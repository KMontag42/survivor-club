<%= form_for Contestant.new, :action => :create, :layout => :basic do |f| %>
  <%= f.text_field :name %>
  <%= f.number_field :age %>
  <%= f.text_field :job %>
  <%= f.text_field :hometown %>
  <%= f.text_field :image_url %>
  <%= f.select :tribes, Tribe.all.collect {|t| [ t.name, t.id ] },
               {},
               { :multiple => true } %>
  <%= f.select :seasons, Season.all.collect {|p| [ p.name, p.id ] },
               {},
               { :multiple => true } %>
  <%= f.submit 'Save' %>
<% end %>
