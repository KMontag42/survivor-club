<% contestants.each_with_index do |ct, i| %>
  <% if i > 0 %>
    <% panel_class = 'hidden character-info' %>
  <% else %>
    <% panel_class = 'character-info' %>
  <% end %>
  <%= panel class: panel_class, data: {id: ct.id} do %>
    <div class="row">
      <div class="col-sm-5 col-xs-6 textfill">
        <span><%= ct.name %></span>
      </div>
      <div class="col-sm-4 col-xs-6 textfill">
        <span><%= ct.age %> - <%= ct.job %></span>
      </div>
      <div class="col-sm-3 hidden-xs text-muted textfill">
        <span><%= ct.hometown %></span>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="row">
      <div class="col-sm-4 col-xs-12 text-center">
        <%= image_tag ct.image_url, height: '50px' %>
      </div>
      <div class="col-sm-8 col-xs-12">
        <br class="visible-xs-block"/>
            <span class="btn btn-success center-block draft-contestant"
                  data-id="<%= ct.id %>" data-name="<%= ct.name %>">
              DRAFT
            </span>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
  <% end %>
<% end %>