<h1>
  Drafts
  <%= link_to 'New', new_draft_path,
              class: 'btn btn-sm btn-primary pull-right' %>
  <div class="clearfix"></div>
</h1>
<hr/>
<%= panel_row column_class: 'col-sm-6 col-xs-12' do %>
  <% if @current_draft %>
    <%= panel heading: 'Current Draft', context: :success do %>
      <div class="container-fluid">
        <div class="col-xs-6">
          <h4>Season</h4>
          <%= link_to @current_draft.season.name,
                      draft_path(@current_draft) %>
        </div>
        <div class="col-xs-6">
          <h4>Contestants</h4>
          <% @current_draft.season.contestants.each do |c| %>
            <p><%= c.name %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
  <% if @last_draft %>
    <%= panel heading: 'Last Season', context: :warning do %>
      <div class="container-fluid">
        <div class="col-xs-6">
          <h4>Season</h4>
          <%= link_to @last_draft.season.name,
                      draft_path(@last_draft) %>
        </div>
        <div class="col-xs-6">
          <h4>Contestants</h4>
          <% @last_draft.season.contestants.each do |c| %>
            <p><%= c.name %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>