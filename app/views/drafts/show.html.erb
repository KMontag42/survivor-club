<% season = @draft.try(:season) %>
<% contestants = season.try(:contestants) if season %>
<div class="row">
  <div class="col-sm-3">
    <div class="panel panel-default">
      <div class="panel-body text-center">
        <h2 class="textfill"><span>Time Left</span></h2>
        <h4 class="textfill"><span class="text-muted">Round 1</span></h4>
        <h3 class="textfill"><span class="countdown"></span></h3>
      </div>
    </div>
    <%= panel heading: 'Round 1 - Cash', context: :info, class: 'text-center contestants-panel' do %>
      <% User.all.each do |u| %>
        <p><%= u.name == ' ' ? u.email : u.name%></p>
      <% end %>
    <% end %>
  </div>
  <div class="col-sm-6">
    <% contestants.each_with_index do |ct, i| %>
      <% if i > 0 %>
        <% panel_class = 'hidden character-info' %>
      <% else %>
        <% panel_class = 'character-info' %>
      <% end %>
      <%= panel class: panel_class, data: {id: ct.id} do %>
        <div class="row">
          <div class="col-sm-5 textfill">
            <span><%= ct.name %></span>
          </div>
          <div class="col-sm-4 textfill">
            <span><%= ct.age %> - <%= ct.job %></span>
          </div>
          <div class="col-sm-3 text-muted textfill">
            <span><%= ct.hometown %></span>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="row">
          <div class="col-sm-4">
            <%= image_tag ct.image_url, class:'img-responsive' %>
          </div>
          <div class="col-sm-8">
            <span class="btn btn-success">DRAFT</span>
            <span class="textfill">
              <span>MORE SHIT GOES HERE</span>
            </span>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
      <% end %>
    <% end %>
    <div class="row">
      <div class="col-sm-12" style="height: 375px; overflow: auto;">
        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Age</th>
            <th>Job</th>
            <th>Hometown</th>
            <th>Tribe</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% contestants.try(:each) do |c| %>
            <tr class="character-row" data-id="<%= c.id %>">
              <td><%= icon :plus %></td>
              <td><%= c.name %></td>
              <td><%= c.age %></td>
              <td><%= c.job %></td>
              <td><%= c.hometown %></td>
              <td><%= icon :asterisk %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        Your Money Picks
      </div>
      <div class="panel-body" style="height: 75px; overflow: auto;">
        <p>Contestant 1</p>
        <p>Contestant 2</p>
        <p>Contestant 3</p>
        <p>Contestant 4</p>
      </div>
    </div>
    <div class="panel panel-warning">
      <div class="panel-heading">
        Your Drinking Picks
      </div>
      <div class="panel-body" style="height: 75px; overflow: auto;">
        <p>Contestant 1</p>
        <p>Contestant 2</p>
        <p>Contestant 3</p>
        <p>Contestant 4</p>
        <p>Contestant 5</p>
      </div>
    </div>
    <div class="chat"></div>
    <form class="">
      <input type="text" id="chat-line" class="form-control"
             placeholder="Message"/>
      <button class="btn btn-primary send-chat form-control">Send</button>
    </form>
    </div>
  </div>
  <div class="clearfix"></div>
</div>