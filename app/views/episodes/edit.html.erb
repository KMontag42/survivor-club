<%= form_for @episode, :layout => :basic do |f| %>
  <%= f.number_field :number %>
  <%= f.text_field :name %>
  <%= f.select :season_id do %>
    <% Season.all.each do |s| %>
      <%= content_tag(:option, s.name, :value => s.id) %>
    <% end %>
  <% end %>
  <%= f.text_area :description %>
  <%= f.submit 'Update' %>
<% end %>
