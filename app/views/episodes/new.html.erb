<%= form_for Episode.new, :action => :create, :layout => :basic do |f| %>
  <%= f.number_field :number %>
  <%= f.text_field :name %>
  <%= f.select :season_id do %>
    <% Season.all.each do |s| %>
      <%= content_tag(:option, s.name, value: s.id) %>
    <% end %>
  <% end %>
  <%= f.date_field :air_date %>
  <%= f.text_area :description %>
  <%= f.submit 'Save' %>
<% end %>
