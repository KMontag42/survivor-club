<%= navbar do %>
  <%= vertical do %>
    <%= link_to root_path do %>
      <img src="//fillmurray.com/50/50" alt="logo" class="img-responsive hidden-xs"/>
    <% end %>
  <% end %>
  <%= horizontal class: 'navbar-center' do %>
    <%= nav do %>
      <%= link_to 'Rules', rules_path %>
      <%= link_to 'Episodes', episodes_path, class: 'hidden-xs' %>
      <%= link_to 'Castaways', castaways_path, class: 'hidden-xs' %>
      <%= link_to 'Players', users_path %>
      <%= link_to 'Game Day', game_day_path %>
      <%= link_to 'Admin', admin_path if current_user && current_user.admin? %>
    <% end %>
    <%= nav class: 'navbar-right' do %>
      <% if user_signed_in? %>
        <%= link_to current_user.name, user_path(current_user), class: 'hidden-xs' %>
      <% else %>
        <%= link_to 'Log In', new_user_session_path, class: 'hidden-xs' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
