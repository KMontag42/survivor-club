<!DOCTYPE html>
<html>
<head>
  <title>Survivor Club</title>
  <%= Gon::Base.render_data({init: true}) %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">
    App.globals.user.email = '<%= current_user.try(:email) %>';
    App.globals.user.name = '<%= current_user.try(:name) %>';
    App.globals.user.id = '<%= current_user.try(:id) %>';
  </script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>
<body id="<%= yield :body_id %>"
      class="<%= yield :body_class %>"
      style="<%= yield :body_style %>">
  <%= render partial: 'layouts/navbar' %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-xs-12">
        <p class="notice"><%= notice %></p>
        <p class="alert hidden"><%= alert %></p>
        <!-- flash notifications -->
        <% flash.each do |key, value| %>
          <%= alert_box value, dismissible: true, context: key %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
