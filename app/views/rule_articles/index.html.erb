<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="4" class="text-center">List Rule Articles</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title || 'HI THERE' %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_rule_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_rule_article_path, class: 'btn btn-primary btn-lg' %>
